@{
    Layout = null;
}

@model PostCountViewModel

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>NetBooru</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open%20Sans" />
    </head>
    <body>
        <h1>NetBooru</h1>
        <form asp-action="List" asp-controller="Posts" method="GET">
            <input type="text" name="query" />
            <br/>
            <input type="button" value="Log In" />
            <button type="submit">Search</button>
        </form>
        <div class="counter">
            @foreach (var c in Model.PostCountString)
            {
                <h2 data-digit="@c">@c</h2>
            }
        </div>
        <style>
            html {
                font-family: 'Open Sans', Arial, Helvetica, sans-serif;
                font-size: 16px;
            }
            body {
                display: flex;
                flex-direction: column;
                text-align: center;
                padding: 0;
                margin: 0;
                height: 100vh;
                justify-content: center;
            }

            .counter h2 {
                display: inline;
                margin: 0em 0.2em;
                font-size: 500%;
            }

            .counter h2[data-digit='0'] {
                color: hsl(0, 100%, 50%);
            }
            .counter h2[data-digit='1'] {
                color: hsl(36, 100%, 50%);
            }
            .counter h2[data-digit='2'] {
                color: hsl(72, 100%, 50%);
            }
            .counter h2[data-digit='3'] {
                color: hsl(108, 100%, 50%);
            }
            .counter h2[data-digit='4'] {
                color: hsl(144, 100%, 50%);
            }
            .counter h2[data-digit='5'] {
                color: hsl(180, 100%, 50%);
            }
            .counter h2[data-digit='6'] {
                color: hsl(216, 100%, 50%);
            }
            .counter h2[data-digit='7'] {
                color: hsl(252, 100%, 50%);
            }
            .counter h2[data-digit='8'] {
                color: hsl(288, 100%, 50%);
            }
            .counter h2[data-digit='9'] {
                color: hsl(324, 100%, 50%);
            }
        </style>
    </body>
</html>
